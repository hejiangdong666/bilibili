page{
  color: #666;
  padding: 10rpx;
}

/* 首页导航 */
.nav wrap{
}
.nav{
  white-space: nowrap;
  padding: 5px 0;
}
.nav_item{
  display: inline-block;
  padding: 20rpx 45rpx; 
  font-size: 30rpx;
}
.nav_item.active{
  border-bottom: 5rpx solid #de688b;
}
/* 轮播图 */
.sliders{
  margin-top: 10px;
}
.sliders swiper{
  height: 220rpx;
}
.sliders navigatior{
  width: 100%;
  height: 100%;
}
.sliders image{
  width: 100%;
  height: 100%;
}

/* 视频列表 */
.video_wrap{
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-between;
}
.video_item{
  width: 48%;
  margin-bottom: 20rpx;
}
.video_img{
  position: relative;
}
.video_img image{
  width: 100%;
  border-radius: 15rpx;
}
.video_img .video_info{
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 24rpx;
}
.video_title{
   font-size: 28rpx;
   display: -webkit-box;
   overflow: hidden;
   white-space: normal;
   text-overflow: ellipsis;
   word-wrap: break-word;
   -webkit-line-clamp: 2 ;
   -webkit-box-orient: vertical;
  }